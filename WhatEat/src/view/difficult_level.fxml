<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.DifficultPage">
   <children>
      <ImageView fitHeight="600.0" fitWidth="800.0">
         <image>
            <Image url="@../img/4.jpg" />
         </image>
      </ImageView>
      <Text fx:id="homeText" layoutX="190.0" layoutY="32.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Home">
         <font>
            <Font name="System Bold Italic" size="22.0" />
         </font>
      </Text>
      <Text fx:id="regText" layoutX="267.0" layoutY="32.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Registration">
         <font>
            <Font name="System Bold Italic" size="22.0" />
         </font>
      </Text>
      <Text fx:id="recipesText" fill="WHITE" layoutX="415.0" layoutY="32.0" smooth="false" strokeType="OUTSIDE" strokeWidth="0.0" text="Recipes">
         <font>
            <Font name="System Bold Italic" size="22.0" />
         </font>
      </Text>
      <Text fx:id="beginnerTxt" layoutX="207.0" layoutY="338.0"  onMouseClicked="#beginner" strokeType="OUTSIDE" strokeWidth="0.0" text="Beginner" underline="true">
         <font>
            <Font name="System Bold Italic" size="22.0" />
         </font>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </Text>
      <Text fx:id="mediumTxt" layoutX="370.0" layoutY="337.0" onMouseClicked="#medium" strokeType="OUTSIDE" strokeWidth="0.0" text="Medium" underline="true">
         <font>
            <Font name="System Bold Italic" size="22.0" />
         </font>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </Text>
      <Text fx:id="advancedTxt" layoutX="516.0" layoutY="337.0" onMouseClicked="#advanced" strokeType="OUTSIDE" strokeWidth="0.0" text="Advanced" underline="true">
         <font>
            <Font name="System Bold Italic" size="22.0" />
         </font>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </Text>
      <Button fx:id="backButton" blendMode="MULTIPLY" cacheShape="false" centerShape="false" focusTraversable="false" layoutX="14.0" layoutY="530.0" mnemonicParsing="false" onAction="#back" prefHeight="53.0" prefWidth="50.0" scaleShape="false">
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
         <graphic>
            <ImageView fitHeight="55.0" fitWidth="55.0" pickOnBounds="true" smooth="false">
               <image>
                  <Image url="@../img/icons8-cerchiato-su-a-sinistra-2-100.png" />
               </image>
            </ImageView>
         </graphic>
      </Button>
   </children>
</AnchorPane>
